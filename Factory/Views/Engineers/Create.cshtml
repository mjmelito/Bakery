@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h4>Add a new engineer</h4>

<p><strong>NOTE:</strong> You need to have at least one machine before you can add an engineer!</p>
<p>Go to @Html.ActionLink("this page", "Create", "Machines") to create a machine.</p>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.LabelFor(model => model.Machine)
  @Html.DropDownList("MachineId")

  <input type="submit" value="Add a new engineer" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all engineers", "Index")</p>