@{
  Layout = "_Layout";
}

@model Factory.Models.Machine
<h1> Add an Engineer </h1>

<h3> Add an engineer to @Html.DisplayFor(model => model.MachineName) </h3>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)

  @Html.Label("Select Engineer")
  @Html.DropDownList("EngineerId")

  <input type="submit" value="Save" />
}
<p>@Html.ActionLink("Back to Machines", "Index")</p>